<div class="nested-fields">
  <div class="field">
    <%= f.select :section_type, options_for_select(HomepageContent.section_types.keys), {}, {class: 'custom-field half-field'} %>
  </div>
  <div class="field">
    <%= f.file_field :content_image, required: true %>
    <br/>
    <%= f.text_area :content, required: true %>
  </div>
  <%= link_to_remove_association "remove", f %>
</div>
