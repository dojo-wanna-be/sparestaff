<div class="admin_sub_header">
  <div>
    <%= link_to 'Backend Home', '', class: 'sub_link' %>
    &nbsp;&gt; Conversations
  </div>
</div>
<div class="admin_panle_body">
  <%= render partial: "layouts/admin/left_hand_navigation" %>
  <div class="admin_right_panel">
    <div class="step_heading">Conversations</div>

    <div class="right_step user">
      <%= render partial: "admin/users/search_form", locals: {action_url: admin_conversations_path, page_name: "conversations_index"} %>
      <div class="search_row">
        <select class="multiple_select" name="Multiple">
          <option>Multiple selection action</option>
          <option value="delete_selected">Delete selected conversations
          </option>
          <option value="suspend_selected">Disallow selected conversations</option>
        </select>
        &nbsp;&nbsp;<button class="Width50Px gobutton">Go</button>
        &nbsp; 0 of <%= @conversations.count %> selected
      </div>
      <div class="error_arise">Please Select a value!</div>

      <div class="search_row">
        <div>Displaying conversation 1 - <%= @conversations.count %> of <%= @conversations.count %> in totals </div>
        &nbsp;
      </div>
      <div class="main_table_container">
        <% if @conversations.blank? %>
          <div>No Results found</div>
        <% else %>
          <div class="csv_table">
            <div class="csv_table_row gray_bg">
              <div class="Width30Px">
                <%= check_box_tag 'selected', '', nil, class: 'checkbox_input_all' %>
                <!-- <input name="Checkbox1" type="checkbox" class="checkbox_input"> -->
              </div>
              <div class="Width50Px text-center">ID</div>
              <div class="Width150Px text-center">Started from</div>
              <div class="Width150Px text-center">Status</div>
              <div class="Width150Px text-center">Started Date</div>
              <div class="Width150Px text-center">Last Updated</div>
              <div class="Width150Px text-center">Starter</div>
              <div class="Width150Px text-center">Other user</div>
              <!-- <div class="Width100Px text-center">Status</div>
              <div class="Width100Px text-center">Delete</div>
              <div class="Width100Px text-center">Pause</div>
              <div class="Width80Px text-center">Edit listing</div> -->
            </div>
            <div class="sort_paginate_ajax">
              <% @conversations.each do |conversation| %>
                <div class="csv_table_row">
                  <div class="Width30Px">
                    <%= check_box_tag "person[#{conversation.id}]", conversation.id, nil, class: 'checkbox_input' %>
                    <!-- <input name="Checkbox2" type="checkbox" class="checkbox_input"> -->
                  </div>
                  <div class="Width50Px text-center">
                    <%= link_to conversation.id, admin_conversation_path(id: conversation.id), class: 'spare_link', target: '_blank' %>
                  </div>
                  <div class="Width150Px text-center"><%= conversation.sender.name %></div>
                  <% if conversation.is_disallowed.eql?(false) %>
                    <div class="Width150Px text-center">Normal</div>
                  <% else %>
                    <div class="Width150Px text-center">Disallowed</div>
                  <% end %>
                  <div class="Width150Px text-center"><%= conversation.created_at&.strftime("%b %e, %Y") %></div>
                  <div class="Width150Px text-center"><%= conversation.updated_at&.strftime("%b %e, %Y") %></div>
                  <div class="Width150Px text-center suspend_user_<%= conversation.id %>">
                    <%= check_box_tag 'delete_user', conversation.id, nil, class: '' %>
                  </div>
                  <div class="Width150Px text-center">
                    <%= check_box_tag 'delete_user', conversation.id, nil, class: ''  %>
                  </div>
                </div>
              <% end %>
              <script type="text/javascript">
                $(function() {
                  $(".sort_paginate_ajax1 th a, .sort_paginate_ajax1 .pagination a").on("click", function(){
                    url = this.href
                    $.getScript(url);
                    return false;
                  });
                });
              </script>
            </div>
            <div class="will_pagination_box pagination_box">
              <%= js_will_paginate @conversations, :previous_label => "<", :next_label => ">" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function(){
    $(".datepicker_calender").datepicker({
      autoclose: true,
      todayHighlight: true,
      dateFormat: 'yyyy-mm-dd'
    });
  });
 $('.checkbox_input_all').click(function(){
    if ($(this).is(':checked')) {
      $('.checkbox_input').prop('checked', true)
    }
    else {
      $('.checkbox_input').prop('checked', false)
    }
  })
 $('.gobutton').click(function(){
    if ($('.multiple_select').val() == "Multiple selection action" || $('.checkbox_input').is(':checked') == false)
      $('.error_arise').show();
    else {
      $('.error_arise').hide();
      var ids = [];
      $('.checkbox_input:checkbox:checked').each(function () {
        code = $(this).val();
        ids.push(code);
      });
      if ($('.multiple_select').val() == "delete_selected") {
        var result = confirm("Are you want to delete selected conversations?");
      }
      else {
        var result = confirm("Are you want to disallow selected conversations?");
      }
      if (result) {
        $.ajax({
          type: "GET",
          url: "<%= disallow_or_delete_admin_conversations_path %>",
          data: { ids: ids, select_action: $('.multiple_select').val() }
        });
        //Logic to delete the item
      }
      else {
        $('.checkbox_input:checkbox:checked,.checkbox_input_all:checkbox:checked').prop('checked', false)
      }
    }
  })
</script>