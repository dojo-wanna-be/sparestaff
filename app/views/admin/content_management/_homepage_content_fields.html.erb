<div class="custom-field-box main_column">
  <div class="column_heading"><h3>Content</h3></div>
  <div class="custom-input-group">
    <div class="nested-fields">
      <div class="field">
        <%= f.label :section_type %>
        <br/>
        <%= f.select :section_type, options_for_select(HomepageContent.section_types.first(2).map {|k, v| [k.humanize.capitalize, k]}, f.object.section_type), {}, {class: 'custom-field half-field'} %>
      </div>
      <br/>
      <div class="field">
        <%= f.label :content_image %>
        <%= f.file_field :content_image, class: 'update_logo' %>
      </div>
      <br/>
      <div class="field">
        <%= f.label :content_text %>
        <%= f.text_area :content , class: 'update_text_data'%>
      </div>
      <%= link_to_remove_association "Remove Section", f %>
    </div>
  </div>
</div>