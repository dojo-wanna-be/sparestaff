<div class="nested-fields">
  <div class="field">
    <%= f.select :section_type, options_for_select(["Easy employee sharing & hiring", "How it works"].each_with_index.map { |u,i| [u] }), {}, {class: 'custom-field half-field'} %>
  </div>
  <div class="field">
    <%= f.file_field :content_image %>
    <br/>
    <%= f.text_area :content %>
  </div>
  <%= link_to_remove_association "remove section", f %>
</div>
