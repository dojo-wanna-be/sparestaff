<div class="nested-fields">
  <div class="field">
    <%= f.label :section_type %>
    <br/>
    <%= f.select :link_type, options_for_select(FooterLink.link_types.map {|k, v| [k.humanize.capitalize, k]}, f.object.link_type),{prompt:"--Select a Footer Link Type--"}, {class: 'custom-field half-field'} %>
  </div>
  <br/>
  <div class="field">
    <%= f.label "Link Name" %>
    <br/>
    <%= f.text_field :link_name, required: true %>
  </div>
  <div class="field">
    <%= f.label "Link Url" %>
    <br/>
    <%= f.text_field :link_url, required: true %>
  </div>
  <%= link_to_remove_association "remove", f %>
</div>