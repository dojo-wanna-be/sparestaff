<div class="right_request_section">
  <div class="user-right-box">
    <div class="name-box">
      <span class="Text22px"><%= @employee_listing.title %></span>
      <%= @employee_listing.name %>
    </div>
    <div class="image-box">
      <% if @employee_listing.profile_picture.present? %>
        <%= image_tag @employee_listing.profile_picture.url, class: 'Image100pxRight' %>
      <% else %>
        <%= image_tag 'no-image.jpg', class: 'Image100pxRight' %>
      <% end %>
    </div>
  </div>

  <div class="user-right-box">
    <div class="left">
      <span><b>From</b></span>
      <div><%= @transaction.start_date.strftime("%A %b %d, %Y") %></div>
    </div>
    <div class="right">
      <span><b>To</b></span>
      <div><%= @transaction.end_date.strftime("%A %b %d, %Y") %></div>
    </div>
  </div>

  <div class="user-right-box">
    <div>
      <%= @slot.gsub(/,\s*$/, "").gsub(/(.*),(.*)/, '\1 and\2') %>
    </div>
  </div>

  <div class="user-right-box">
    <div class="left">
      <span><b>Probationary period</b></span>
    </div>
    <div class="right">
      <span id="probationary_period"><%= @transaction.probationary_period.present? ? "#{@transaction.probationary_period} month" : "1 month" %></span>
    </div>
  </div>

  <div class="user-right-box">
    <div class="left">
      <div><b>Weekly payment</b></div>
      <div><%= "$#{@employee_listing.weekday_price.to_f} x #{@transaction.weekday_hours} hours" %></div>
      <div><%= "$#{@employee_listing.weekend_price.to_f} x #{@transaction.weekend_hours} hours (weekend)" %></div>
      <div>Tax withholding</div>
      <div>Service fee</div>
    </div>
    <div class="right">
      <div>&nbsp;</div>
      <div><%= "$#{(@employee_listing.weekday_price.to_f * @transaction.weekday_hours).round(2)}" %></div>
      <div><%= "$#{(@employee_listing.weekend_price.to_f * @transaction.weekend_hours).round(2)}" %></div>
      <div><%= "-$#{@transaction.tax_withholding_amount.round(2)}" %></div>
      <div>$<%= @transaction.service_fee.round(2) %></div>
    </div>
  </div>

  <div class="user-right-box">
    <div class="left">
      <span><b>Weekly Total</b></span>
    </div>
    <div class="right">
      <span><b><%= "$#{(@transaction.amount + @transaction.service_fee).round(2)}" %></b></span>
    </div>
  </div>

  <div class="user-right-box joint-box">
    <div class="inner-joint">
      <div class="left">
        <div><b>Total employment contract</b></div>
        <div><%= "$#{@employee_listing.weekday_price.to_f} x #{@transaction.total_weekday_hours} hours" %></div>
        <div><%= "$#{@employee_listing.weekend_price.to_f} x #{@transaction.total_weekend_hours} hours (weekend)" %></div>
        <div>Tax withholding</div>
        <div>Service fee</div>
      </div>
      <div class="right">
        <div>&nbsp;</div>
        <div><%= "$#{(@employee_listing.weekday_price.to_f * @transaction.total_weekday_hours).round(2)}" %></div>
        <div><%= "$#{(@employee_listing.weekend_price.to_f * @transaction.total_weekend_hours).round(2)}" %></div>
        <div><%= "-$#{@transaction.total_tax_withholding_amount.round(2)}" %></div>
        <div>$<%= @transaction.total_service_fee.round(2) %></div>
      </div>
    </div>
    <div class="devider">
      <div class="full-row">
        <span class="total"><b>Total</b></span>
        <span class="value"><b><%= "$#{(@transaction.total_amount + @transaction.total_service_fee).round(2)}" %></b></span>
      </div>
      <div class="p-text">You will not pay the Total employment contract upfront. You have chosen to pay weekly.</div>
    </div>
  </div>

  <div class="user-right-box">
    <div class="name-box">
      <span><b><%= "#{@employee_listing.poster.name} is Poster" %></b></span>
    </div>
    <div class="image-box">
      <% if @employee_listing.profile_picture.present? %>
        <%= image_tag @employee_listing.profile_picture.url, class: 'Image100pxRight' %>
      <% else %>
        <%= image_tag 'no-image.jpg', class: 'Image100pxRight' %>
      <% end %>
    </div>
  </div>

  <div class="user-right-box bottom-joint-box">
    <div><b>Cancellation policy</b></div>

    <div class="more-box">
      Cancel within 48 hours of booking to get a full refund.
      <br />
      <%= link_to 'More details', 'https://www.sparestaff.com.au/cancellation-policy', target: '_blank', class: 'blank-link' %>
    </div>
  </div>
</div>
