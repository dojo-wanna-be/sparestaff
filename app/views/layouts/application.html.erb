<!DOCTYPE html>
<html>
  <head>
    <title>Online MarketPlace for Sharing and Hiring Employees - Spare Staff</title>
    <%= Gon::Base.render_data(init: true) %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta content="en-au" http-equiv="Content-Language" />
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type" />

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script src="https://js.stripe.com/v3/"></script>
    <%= javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/jquery.AreYouSure/1.9.0/jquery.are-you-sure.min.js' %>
  </head>

  <body>
    <%= render 'toastr_rails/flash' %>
    <% if params[:controller].include?("admin") %>
      <%= render partial: "layouts/admin_header" %>
    <% else %>
      <% unless params[:controller].eql?("transactions") %>
        <div id="topbar">
          <%= render partial: "layouts/header" %>
        </div>
      <% end %>
    <% end %>
    <%= yield %>
  </body>
</html>
