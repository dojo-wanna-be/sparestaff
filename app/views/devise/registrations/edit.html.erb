  var selector = '.tab_row a';

  $(selector).on('click', function(){
      $(selector).removeClass('active');
      $(this).addClass('active');
  });

  $('.about_you').click(function(){
    $('#ReviewsByYouBox').hide();
    $('#ReviewsAboutYouBox').show();
  });
