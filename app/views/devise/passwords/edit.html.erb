<div class="reset-password-box">
  <div class="inner-reset-password-box">
    <h1 class="reset-heading">Reset Your Password</h1>

    <div class="reset-form">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, id: "user_new_password_form" }) do |f| %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field">
          <label>
            Password
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em><br />
            <% end %>
          </label>
          <%= f.password_field :password, id: "user_new_password", class: 'custom-input', required: true %>
        </div>

        <div class="field">
          <label>Confirm Password</label>
          <%= f.password_field :password_confirmation, id: "user_confirm_new_password", class: 'custom-input', required: true %>
        </div>

        <div class="field">
          <%= f.submit "Update Password", class: "cust_btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>